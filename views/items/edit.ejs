<%- include ../templates/header.ejs %>
  <div class="container">
    <br>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/items">Items Data</a></li>
      <li class="breadcrumb-item active">Edit Item</li>
    </ol>
    <h3>Add Item Data</h3>
    <% if(alert.message != '') { %>
    <div class="alert alert-<%= alert.status %>">
      <%= alert.message %>
    </div>
    <% } %>
    <form action="/items/<%= item.id %>/edit" method="post">
      <div class="form-group">
        <label for="name"> Name:</label>
        <input type="text" value="<%= item.name %>" class="form-control" name="name" id="name" >
      </div>
      <div class="form-group">
        <label for="brand">Brand:</label>
        <input type="text" value="<%= item.brand %>" class="form-control" name="brand" id="brand">
      </div>
      <div class="form-group">
        <label for="codeitem">Codeitem:</label>
        <input type="text" value="<%= item.codeitem %>" class="form-control" name="codeitem" id="codeitem">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <%- include ../templates/footer.ejs %>
